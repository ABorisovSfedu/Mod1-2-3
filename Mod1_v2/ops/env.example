# InterView Mod1-2-3 System Environment Configuration
# Copy this file to each module as .env and customize as needed

# Mod1_v2 (ASR Service)
MOD1_HOST=0.0.0.0
MOD1_PORT=8080
# Optional: ASR specific settings
# MOD1_LOG_LEVEL=info
# MOD1_MAX_AUDIO_SIZE=50MB
# MOD1_SUPPORTED_FORMATS=webm,wav,mp3

# Mod2-v1 (NLP Service)
MOD2_HOST=0.0.0.0
MOD2_PORT=8001
LAYOUT_PROVIDER=external     # external for Mod3 integration, internal for fallback
MOD3_URL=http://localhost:9001
FUZZY_THRESHOLD=0.80
MAX_COMPONENTS_PER_PAGE=20
NLP_DEBUG=false             # Enable detailed NLP processing logs
STANZA_LANG=ru
PAGE_TEMPLATE=hero-main-footer

# Mod3-v1 (Visual Mapping Service)
MOD3_HOST=0.0.0.0
MOD3_PORT=9001
DATABASE_URL=sqlite:///./mod3.db
M3_REQUIRE_PROPS=true       # Ensure components have props
M3_NAMES_NORMALIZE=true     # Convert component names to ui.* format
M3_DEDUP_BY_COMPONENT=true  # Remove duplicate components in sections
M3_AT_LEAST_ONE_MAIN=true   # Ensure main section is not empty
M3_FALLBACK_SECTIONS=true   # Provide fallback layout when empty
M3_MAX_MATCHES=6            # Limit number of fuzzy matches

# Web App (for Mod2/Mod3 integration testing)
WEB_BASE_URL=http://localhost:3000

# Security (if needed)
# INGEST_SECRET=changeme
# JWT_SECRET=your-secret-key

# Database Connections (if switching from SQLite)
# MOD1_DB_URL=sqlite:///./data/asr.db
# MOD2_DB_URL=sqlite:///./data/mod2.db
# MOD3_DB_URL=sqlite:///./mod3.db

# Logging & Monitoring
APP_VERSION=1.0.0
SERVICE_NAME_PREFIX=interview-mod
